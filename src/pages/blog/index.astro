---
// src/pages/blog/index.astro
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 1. 取得所有文章並依日期排序
const allPosts = (await getCollection('posts'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// 2. 取得網址上的 tag 參數 (例如 /blog?tag=React)
const { searchParams } = Astro.url;
const currentTag = searchParams.get('tag');

// 3. 根據 tag 篩選文章
const posts = currentTag 
  ? allPosts.filter(post => post.data.tags.includes(currentTag))
  : allPosts;

// 4. 收集所有唯一的 Tags (用於顯示篩選器)
const allTags = [...new Set(allPosts.flatMap(post => post.data.tags))];
---

<Layout title="Writing">
  <section class="blog-header">
    <h1>Writing</h1>
    <p class="subtitle">Thoughts on medicine, code, and everything in between.</p>
    
    <div class="tag-filter">
      <a 
        href="/blog" 
        class={`tag-chip ${!currentTag ? 'active' : ''}`}
      >
        All
      </a>
      {allTags.map(tag => (
        <a 
          href={`/blog?tag=${tag}`} 
          class={`tag-chip ${currentTag === tag ? 'active' : ''}`}
        >
          #{tag}
        </a>
      ))}
    </div>
  </section>

  <section class="post-list">
    {posts.length > 0 ? (
      <ul>
        {posts.map((post) => (
          <li>
            <a href={`/blog/${post.slug}`} class="post-item">
              <div class="post-meta">
                <time>{post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}</time>
                <div class="mini-tags">
                  {post.data.tags.slice(0, 2).map(t => <span>#{t}</span>)}
                </div>
              </div>
              <h2 class="post-title">{post.data.title}</h2>
            </a>
          </li>
        ))}
      </ul>
    ) : (
      <p class="empty-state">No posts found with tag "#{currentTag}".</p>
    )}
  </section>
</Layout>

<style>
  /* 你的 CSS 樣式 */
  .blog-header { margin-bottom: 3rem; }
  .tag-filter { 
    display: flex; 
    gap: 0.8rem; 
    flex-wrap: wrap; 
    margin-top: 1.5rem; 
  }
  
  .tag-chip {
    font-size: 0.85rem;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    background: var(--card-bg);
    color: var(--text-muted);
    border: 1px solid var(--border-color);
    transition: all 0.2s;
  }
  
  .tag-chip:hover {
    border-color: var(--accent);
    color: var(--accent);
  }
  
  /* 選中狀態 */
  .tag-chip.active {
    background: var(--accent);
    color: white;
    border-color: var(--accent);
  }

  .post-list ul { list-style: none; padding: 0; }
  .post-item { 
    display: flex; 
    align-items: baseline; 
    padding: 1.2rem 0; 
    border-bottom: 1px solid var(--border-color);
    gap: 2rem;
  }
  
  .post-meta {
    min-width: 120px;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }
  
  .post-meta time {
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--text-muted);
  }
  
  .mini-tags span {
    font-size: 0.7rem;
    color: var(--text-muted);
    background: var(--card-bg);
    padding: 2px 6px;
    border-radius: 4px;
    margin-right: 4px;
  }

  .post-title {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 500;
  }

  @media (max-width: 600px) {
    .post-item { flex-direction: column; gap: 0.5rem; }
  }
</style>