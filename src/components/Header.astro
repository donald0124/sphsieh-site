---
import ThemeToggle from './ThemeToggle.astro';
---
<header class="site-header">
  <div class="container header-inner">
    <a href="/" class="logo">Po Hsieh</a>
    <nav>
      <a href="/blog" class="nav-link">Writing</a>
      <a href="/projects" class="nav-link">Projects</a>
      <a href="/about" class="nav-link">About</a>
      <div class="toggle-wrapper">
        <ThemeToggle />
      </div>
    </nav>
  </div>
</header>

<style>
  .site-header {
    padding: 2rem 0;
  }
  .header-inner {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo {
    font-weight: 800;
    font-size: 1.2rem;
    letter-spacing: -0.5px;
  }
  nav {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }
  .nav-link {
    font-size: 0.95rem;
    color: var(--text-muted);
  }
  .nav-link:hover {
    color: var(--accent);
  }
  /* Mobile RWD */
  @media (max-width: 600px) {
    .nav-link { display: none; } /* 手機版可能需要漢堡選單，暫時隱藏 */
    .toggle-wrapper { display: block; }
  }
</style>